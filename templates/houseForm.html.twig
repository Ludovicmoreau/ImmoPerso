{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <p>Fill the form to Add an house</p>
        {{ form(form) }}
    </div>

    {% for house in houses %}
<div class="container">
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th scope="col">Superficy</th>
            <th scope="col">Number of Room</th>
            <th scope="col">Have to do work inside</th>
            <th scope="col">open kitchen</th>
            <th scope="col">near RER</th>
            <th scope="col">adress</th>
            <th scope="col">city</th>
            <th scope="col">Travel time to job</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>{{ house.superficy }}</td>
            <td>{{ house.numberOfRoom }}</td>
            <td> {% if house.haveWorksToDoInside == false %} No {% else %} Yes  {% endif %}  </td>
            <td>{{ house.openKitchen }}</td>
            <td>{{ house.nearRER }}</td>
            <td>{{ house.adress }}</td>
            <td>{{ house.city }}</td>
            <td>{{ house.travelTimeToJob }}</td>
        </tr>
        </tbody>
    </table>
</div>
    {% endfor %}
{% endblock %}
